++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
read m,n and find and fid m power n

// Online C compiler to run C program online
#include <stdio.h>
int power(int m,int n)
{
    if(n==0)
     return 1;
    else
     return m*power(m,n-1);
}
int main()
{
    int n,m;
    scanf("%d%d",&m,&n);
    int r=power(m,n);
    printf("%d",r);
}

2 5
32
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Nth fabonacci num

// Online C compiler to run C program online
#include <stdio.h>
int fib(int n)
{
    if(n==0 || n==1)
     return n;
    else
     return fib(n-1)+fib(n-2);
}
int main()
{
    int n;
    scanf("%d",&n);
    int k=fib(n);
    printf("%d",k);
}

6
8
