read the num and  find sum of digits

#include <stdio.h>
int sumofdigits(int n)
{
    if(n==0)
     return 0;
    else
     return n%10+sumofdigits(n/10);
}
int main()
{m power
    int n;
    scanf("%d",&n);
    int r=sumofdigits(n);
    printf("%d",r);
}

