#include <stdio.h>
#include<math.h>
int main() {
int n,d,s1=0,s2=0;   //n=number
scanf("%d",&n);
while(n>0)
{
   d=n%10; //retrieve
   n=n/10; //remove
   if(d%2==0) //even
   {
       s1=s1+d;
   }
   else  //odd
   {
       s2=s2+d;
   }
}  
printf("%d\n",s1);
printf("%d\n",s2);
  return 0;
}

------------------
12345
6
9
------------------
=====================================================================================
''''''''''''''''''MULTIPLICATION
#include <stdio.h>
#include<math.h>
int main() {
int n,d,s1=1,s2=1;   //n=number
scanf("%d",&n);
while(n>0)
{
   d=n%10; //retrieve
   n=n/10; //remove
   if(d%2==0) //even
   {
       s1=s1*d;
   }
   else  //odd
   {
       s2=s2*d;
   }
}  
printf("%d\n",s1);
printf("%d\n",s2);
  return 0;
}
-------------------------
12345
8
15
--------------------------
