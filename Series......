***************ARITHEMETIC PROGRESSION**************
#include <stdio.h>
int main() {
  int n,r,i,d;    //n=given number(a1);d=common distance;i=temp number//
  scanf("%d%d",&n,&d);
  for (i = 1; ; i++)
  {
      r=n+d;
      n=r;
      printf("%d, ", r);
  }
  printf("\n");
  return 0;
}
__________________________________________________
2 3
5, 8, 11, 14, 17, 20, 23, 26, 29, 32, 35, 38, 41, 44, 47, 50, 53, 56, 59, 62, 65, 68, 71, 74, 77, 80..........
______________________________________________________
**********************GEOMETRIC PROGRESSION****************
#include <stdio.h>
int main() {
  int n,r=1,i,d;
  scanf("%d%d",&n,&d);
  for (i = 1; ; i++) {
      r=n*d;
      n=r;
    printf("%d, ", r);
  }
  printf("\n");
  return 0;
}
_____________________________________
2 2
4, 8, 16, 32, 64, 128, 256, 512, 1024, 2048, 4096, 8192, 16384, 32768, 65536, 131072, 262144
